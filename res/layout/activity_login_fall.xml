<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/btLoginFall"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtLoginFallPassword"
        android:layout_marginLeft="20dp"
        android:background="@drawable/btn_yellow"
        android:text="Log in" />

    <Button
        android:id="@+id/btLoginFallSignUp"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btLoginFall"
        android:layout_alignRight="@+id/btLoginFall"
        android:layout_below="@+id/btLoginFall"
        android:background="@drawable/btn_yellow"
        android:text="Sign up" />

    <EditText
        android:id="@+id/txtLoginFallPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btLoginFall"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/txtLoginFallName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLoginFallPassword"
        android:layout_alignLeft="@+id/txtLoginFallPassword"
        android:layout_alignRight="@+id/txtLoginFallPassword"
        android:ems="10"
        android:hint="Username" />

    <ImageView
        android:id="@+id/imgLoginFall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLoginFallName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>