<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CashierFragment" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:id="@+id/txtAddNewStockID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="fill blank with barcode" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btItemListView"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:text="ok"
                style="@style/ButtonText"
       			android:background="@drawable/btn_yellow" />
        </LinearLayout>

        <Button
            android:id="@+id/btStockBarcodeScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan barcode" 
            style="@style/ButtonText"
       		android:background="@drawable/btn_yellow"/>

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stock list"
            android:textSize="20dp" 
            android:background="#FFFFFF"/>

        <ListView
            android:id="@+id/listViewProductSearch"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_weight="0.75"
            android:drawSelectorOnTop="true" >

        </ListView>

        <Button
            android:id="@+id/btLoginFallSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK" 
            style="@style/ButtonText"
       		android:background="@drawable/btn_yellow"/>
    </LinearLayout>

</RelativeLayout>