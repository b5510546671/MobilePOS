<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditProductDescriptionActivity" >

    <Button
        android:id="@+id/btEditOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEditDescription"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtEditDescription"
        android:text="OK" />

    <EditText
        android:id="@+id/txtEditDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btEditOK"
        android:layout_alignLeft="@+id/txtEditPrice"
        android:layout_alignRight="@+id/txtEditPrice"
        android:ems="10"
        android:hint="Description word" />

    <EditText
        android:id="@+id/txtEditPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEditDescription"
        android:layout_alignLeft="@+id/txtEditBarcode"
        android:layout_alignRight="@+id/txtEditBarcode"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtEditBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEditPrice"
        android:layout_alignLeft="@+id/txtEditName"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Barcode"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtEditName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEditBarcode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:hint="Name" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEditName"
        android:layout_alignLeft="@+id/txtEditName"
        android:layout_alignRight="@+id/txtEditName"
        android:layout_below="@+id/textView1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Old Description"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtEditDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Edit Product Description"
        android:textSize="20sp" />

</RelativeLayout>