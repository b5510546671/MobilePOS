<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StockFragment" >

    <TextView
        android:id="@+id/txtItemListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Stock Manager"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/pressed_sikarinstyle"
        android:textSize="30dp" />

    <Button
        android:id="@+id/btStockViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btSearch"
        android:text="View All Product Description" 
        style="@style/ButtonText"
       	android:background="@drawable/btn_yellow"/>

    <Button
        android:id="@+id/btStockAddNewProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btStockViewAll"
        android:layout_alignRight="@+id/btStockViewAll"
        android:layout_below="@+id/btStockViewAll"
        android:text="Add New Product Description" 
        style="@style/ButtonText"
       	android:background="@drawable/btn_yellow"/>

    <Button
        android:id="@+id/btSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btStockViewAll"
        android:layout_alignRight="@+id/btStockViewAll"
        android:layout_below="@+id/txtItemListView"
        android:layout_marginTop="14dp"
        android:text="Create New Stock" 
        style="@style/ButtonText"
       	android:background="@drawable/btn_yellow"/>

    <Button
        android:id="@+id/btRegisterNewMember"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btStockAddNewProduct"
        android:layout_alignRight="@+id/btStockAddNewProduct"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_yellow"
        android:text="Register new member" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btStockAddNewProduct"
        android:layout_alignRight="@+id/btStockAddNewProduct"
        android:layout_below="@+id/btStockAddNewProduct"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Member Manager"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/pressed_sikarinstyle"
        android:textSize="30dp" />

</RelativeLayout>
