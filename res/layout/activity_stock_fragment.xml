<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StockFragment" >

    <TextView
        android:id="@+id/txtItemListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Stock Manager"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btStockViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btSearch"
         android:background="@android:color/white"
        android:text="View All Product Description" />

    <Button
        android:id="@+id/btStockAddNewProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btStockViewAll"
        android:layout_alignRight="@+id/btStockViewAll"
        android:layout_below="@+id/btStockViewAll"
         android:background="@android:color/holo_orange_light"
        android:text="Add New Product Description" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btStockAddNewProduct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Member Manager"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btStockViewAll"
        android:layout_alignRight="@+id/btStockViewAll"
        android:layout_below="@+id/txtItemListView"
        android:layout_marginTop="14dp"
         android:background="@android:color/holo_orange_light"
        android:text="Create New Stock" />

    <Button
        android:id="@+id/btRegisterNewMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btStockAddNewProduct"
        android:layout_alignRight="@+id/btStockAddNewProduct"
        android:layout_below="@+id/TextView01"
         android:background="@android:color/holo_orange_light"
        android:text="Register new member" />

</RelativeLayout>
